<h1>Viewing Users</h1>
<table>
    <tr>
        <th>ID</th>
        <th>Journey ID</th>
        <th>User ID</th>
        <th>Date Time</th>
        <th>Complaint</th>
        <th>Edit Record</th>
        <th>Delete Record</th>
    </tr>
    <% unless @complatintsInfo.nil? %>
        <% @complatintsInfo.each do |complaint| %>
        <tr>
            <td><%=h complaint[0] %></td>
            <td><%=h complaint[1] %></td>
            <td><%=h complaint[2] %></td>
            <td><%=h complaint[3] %></td>
            <td><%=h complaint[4] %></td>
            <td><a href='editComplaint/<%=h complaint[0] %>'>Edit</a></td>
            <td><a href='deleteComplaint/<%=h complaint[0] %>' onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
        </tr>
        <% end %>
    <% end %>
</table>

<p>To add a new complaint click <a href="/addComplaint">here</a>.</p>
