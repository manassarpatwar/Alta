<h1>Add a Taxi</h1>

<p>Return to <a href="/settings">viewing the taxis</a>. </p>

<h2>Add new taxi values:</h2>

<% if @submitted && @all_ok %>
<p>Taxi Added.</p>
<% else %>

<% if @submitted && !@all_ok %>
<p style="color:red">There were errors in your form submission, please correct them below.</p>
<% end %>
<div id="add">
    <form action="/addTaxi" method="post" id="form">
        <% if @submitted && !@regNum_ok %>
        <p style="color:red">Please enter a valid reg number</p>
        <% end %>
        <% if @submitted && !@regNum_unique %>
        <p style="color:red">That reg number is already taken</p>
        <% end %>
        <label class="input_label">Reg Number:
            <input type="text" name="regNum" class="inputbox" value="<%=h @regNum if @submitted %>" />
        </label>

        <% if @submitted && !@contact_ok %>
        <p style="color:red">Please enter a valid contact number</p>
        <% end %>
        <% if @submitted && !@contact_unique %>
        <p style="color:red">That contact number is already taken</p>
        <% end %>
        <label class="input_label">Contact Number:
            <input type="text" class="inputbox" name="contact" value="<%=h @contact if @submitted %>" />
        </label>

        <% if @submitted && !@taxiType_ok %>
        <p style="color:red">Please enter a valid taxi type (S, M or L)</p>
        <% end %>
        <label class="input_label">Taxi Type:
            <input type="text" class="inputbox" name="taxiType" value="<%=h @taxiType if @submitted %>" />
        </label>

        <% if @submitted && !@city_ok %>
        <p style="color:red">Please enter a valid city (SHEFFIELD or MANCHESTER)</p>
        <% end %>
        <label class="input_label">City:
            <input type="text" class="inputbox" name="city" value="<%=h @city if @submitted %>" />
        </label>

        <input type="submit" class="submitButton" value="Submit" />
    </form>
</div>

<% end %>
