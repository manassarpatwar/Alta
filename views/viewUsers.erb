<h2>Users</h2>
<table>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Sign-up Date</th>
        <th>User Type</th>
        <th>Free Rides</th>
        <th>Total Rides</th>
        <th>Edit Record</th>
        <th>Delete Record</th>
    </tr>
    <% unless @usersInfo.nil? %>
        <% @usersInfo.each do |user| %>
        <tr>
            <td><%=h user[0] %></td>
            <td><%=h user[1] %></td>
            <td><%=h user[2] %></td>
            <td><%=h user[3] %></td>
            <td><%=h user[4] %></td>
            <td><%=h user[5] %></td>
            <td><a href='editUser/<%=h user[0] %>'>Edit</a></td>
            <td><a href='deleteUser/<%=h user[0] %>' onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
        </tr>
        <% end %>
    <% end %>
</table>

<p>To add a new user click <a href="/addUser">here</a>.</p>
